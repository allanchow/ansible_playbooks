# Where and how to store data.
storage:
  dbPath: {{ mongodb_data_path }}
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
  logRotate: reopen

# network interfaces
net:
  port: {{ mongodb_port }}
  bindIp: {{ mongodb_ip }}

